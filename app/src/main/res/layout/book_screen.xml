<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5">

    <!-- Header Layout -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="#E0E0E0">

        <ImageButton
            android:id="@+id/back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_bookscreen_arrow_back_24"
            android:layout_marginEnd="10dp"
            android:background="?android:attr/selectableItemBackground"
            android:contentDescription="Back" />

        <ImageButton
            android:id="@+id/menu_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="140dp"
            android:src="@drawable/ic_bookscreen_menu"
            android:background="?android:attr/selectableItemBackground"
            android:contentDescription="Menu" />

        <Button
            android:id="@+id/font_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:text="Aa"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="22sp" />

        <ImageButton
            android:id="@+id/bookmark_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:background="?android:attr/selectableItemBackground"
            android:contentDescription="Bookmark"
            android:src="@drawable/ic_bookscreen_bookmark_24" />
    </LinearLayout>

    <!-- Image View -->
    <ImageView
        android:id="@+id/image_book"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:contentDescription="Image Content" />
    <!-- Tiltle View -->
    <TextView
        android:id="@+id/title_book"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="22sp"
        android:textAllCaps="true"
        android:layout_margin="10dp"/>
    <!-- Content View -->
    <TextView
        android:id="@+id/content_text"
        android:layout_width="match_parent"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_height="280dp"
        android:text="Content"
        android:textSize="18sp"
        android:gravity="left" />

    <!-- Page Slider -->
    <SeekBar
        android:id="@+id/page_slider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp" />

    <!-- Page Number Label -->
    <TextView
        android:id="@+id/page_number_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Page number"
        android:layout_gravity="center"
        android:layout_marginBottom="4dp" />



</LinearLayout>
